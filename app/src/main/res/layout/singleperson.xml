<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#440150"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/dname"
            android:gravity="center"
            android:background="#511DAE"
            android:textColor="#FDFCFC"
            android:textSize="18sp"
            android:text="Name: Md Parvez"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/did"
            android:gravity="center"
            android:background="#3D0C95"
            android:textColor="#FDFCFC"
            android:textSize="18sp"
            android:text="ID: 191-15-2468"
            android:textStyle="bold"
            android:padding="7dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dsec"
            android:gravity="center"
            android:background="#511DAE"
            android:textColor="#FDFCFC"
            android:textSize="18sp"
            android:text="Section: PC-C"
            android:textStyle="bold"
            android:padding="7dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ddpt"
            android:gravity="center"
            android:background="#3D0C95"
            android:textColor="#FDFCFC"
            android:textSize="18sp"
            android:text="Dpt. of CSE, DIU"
            android:textStyle="bold"
            android:padding="7dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/dimg"
            android:src="@drawable/parvez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>