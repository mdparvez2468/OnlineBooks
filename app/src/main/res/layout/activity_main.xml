<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#009688"
    tools:context=".MainActivity">

    <LinearLayout

        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="#03BCAA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_import_contacts_24"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/tutorials"
                android:layout_margin="10dp"
                android:background="#FBDCDC"
                android:layout_weight="2"
                android:text="Tutorials"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#070707"
                android:backgroundTint="#1BD623"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

         <LinearLayout

             android:gravity="center"
             android:layout_marginRight="20dp"
             android:orientation="vertical"
             android:background="#03BCAA"
             android:layout_weight="1"
             android:layout_width="0dp"
            android:layout_height="match_parent">

             <ImageView
                 android:src="@drawable/ic_baseline_list_alt_24"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                 android:layout_weight="6"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"/>

             <Button
                 android:id="@+id/booklist"
                 android:layout_margin="10dp"
                 android:background="#FBDCDC"
                 android:layout_weight="2"
                 android:text="Book List"
                 android:textStyle="bold"
                 android:textSize="15sp"
                 android:textColor="#070707"
                 android:backgroundTint="#1BD623"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"/>

        </LinearLayout>


    </LinearLayout>

 <LinearLayout

        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="#03BCAA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_ondemand_video_24"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/videolectures"
                android:layout_margin="10dp"
                android:background="#FBDCDC"
                android:layout_weight="2"
                android:text="Video Lectures"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#070707"
                android:backgroundTint="#1BD623"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

         <LinearLayout

             android:gravity="center"
             android:layout_marginRight="20dp"
             android:orientation="vertical"
             android:background="#03BCAA"
             android:layout_weight="1"
             android:layout_width="0dp"
            android:layout_height="match_parent">

             <ImageView
                 android:src="@drawable/ic_baseline_question_answer_24"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                 android:layout_weight="6"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"/>

             <Button
                 android:id="@+id/quiz"
                 android:layout_margin="10dp"
                 android:background="#FBDCDC"
                 android:layout_weight="2"
                 android:text="Quiz"
                 android:textStyle="bold"
                 android:textSize="15sp"
                 android:textColor="#070707"
                 android:backgroundTint="#1BD623"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"/>

        </LinearLayout>


    </LinearLayout>

 <LinearLayout

        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="#03BCAA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_info_24"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/aboutus"
                android:layout_margin="10dp"
                android:background="#FBDCDC"
                android:layout_weight="2"
                android:text="About us"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#070707"
                android:backgroundTint="#1BD623"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>